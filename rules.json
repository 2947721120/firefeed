{
  "rules": {
    "users": {
      "$userid": {
        ".read": "$userid == auth.userid",
        "sparks": {
          ".write": "$userid == auth.userid"
        },
        "follows": {
          ".write": "$userid == auth.userid",
          "$follow": {
            ".validate": "root.child('users').hasChild($follow) == true"
          }
        },
        "followers": {
          "$follower": {
            ".write": "$follower == auth.userid"
          }
        },
        "stream": {
          "$sparkid": {
            ".write": "auth.userid == $userid || root.child('users').child($userid).child('follows').hasChild(auth.user) == true",
            ".validate": "data.val() == null && newData.hasChildren(['userid', 'sparkid'])",
            "userid": {
              ".validate": "newData.val() == auth.userid"
            }
          }
        }
      }
    },
    "sparks": {
      "$sparkid": {
        ".write": "data.val() == null",
        ".validate": "newData.hasChildren['author', 'content']",
        "author": {
          ".validate": "newData.val() == auth.userid"
        },
        "content": {
          ".validate": "newData.val() == true"
        }
      }
    }
  }
}