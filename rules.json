{
  "rules": {
    "people": {
      ".read": "true",
      "$userid": {
        ".write": "$userid == auth.userid"
      }
    },
    "users": {
      "$userid": {
        ".read": "$userid == auth.userid",
        ".write": "$userid == auth.userid",
        "following": {
          "$followerid": {
            ".validate": "newData.isBoolean() && root.child('people').hasChildren([$followerid])"
          }
        },
        "followers": {
          "$follower": {
            ".write": "$follower == auth.userid"
          }
        },
        "sparks": {
          ".read": "root.child('users').child($userid).child('followers').child(auth.userid).val() == true"
        },
        "stream": {
          ".write": "root.child('users').child($userid).child('following').child(auth.userid).val() == true",
          "$sparkid": {
            ".write": "root.child('sparks').child($sparkid).child('author').val() == auth.userid"
          }
        }
      }
    },
    "sparks": {
      ".read": "true",
      "$sparkid": {
        ".write": "data.val() == null",
        ".validate": "newData.hasChildren(['author', 'content'])",
        "author": {
          ".validate": "newData.val() == auth.userid"
        },
        "content": {
          ".validate": "newData.isString()"
        }
      }
    }
  }
}